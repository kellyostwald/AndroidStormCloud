<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/liftName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textStyle="bold" android:layout_marginTop="10dp" />

    <LinearLayout
           android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginBottom="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/color"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginRight="10dp" android:layout_marginTop="5dp" android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/status" 
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

   <!--  <TextView
        android:id="@+id/mountain"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:layout_marginBottom="10dp" />
 -->
</LinearLayout>